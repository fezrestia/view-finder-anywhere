<?xml version="1.0" encoding="utf-8"?>

<manifest
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="com.fezrestia.android.viewfinderanywhere"
>

    <!-- Permissions. -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- Features. -->
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <!-- Application. -->
    <application
            android:name=".ViewFinderAnywhereApplication"
            android:icon="@drawable/application_icon"
            android:label="@string/application_label"
            android:hardwareAccelerated="true"
            android:allowBackup="false"
            tools:ignore="GoogleAppIndexingWarning"
    >

        <!-- Activities. -->
        <activity
                android:name=".activity.ViewFinderAnywhereSettingActivity"
                android:label="@string/preference_app_label"
                android:launchMode="singleTask"
                tools:ignore="ExportedPreferenceActivity"
        >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>



        <!-- Receivers. -->
        <receiver
                android:name=".widget.ToggleWidgetProvider"
        >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/toggle_overlay_widget"
            />
        </receiver>
        <receiver
                android:name=".receiver.OverlayViewFinderTriggerReceiver"
                android:exported="false"
        >
            <intent-filter>
                <action android:name="com.fezrestia.android.viewfinderanywhere.intent.ACTION_START_OVERLAY_VIEW_FINDER" />
            </intent-filter>
        </receiver>



        <!-- Services. -->
        <service
                android:name=".service.OverlayViewFinderService"
                android:exported="false"
        />
        <!-- Firebase messaging -->
        <service
                android:name="com.fezrestia.android.lib.firebase.FirebaseMessagingServiceImpl"
                android:exported="false"
        >
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>
